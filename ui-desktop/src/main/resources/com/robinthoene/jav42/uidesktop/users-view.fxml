    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <VBox alignment="CENTER_RIGHT">
        <Button fx:id="addNewUserButton" text="+ Neuen Nutzer anlegen"/>
    </VBox>
    <TableView fx:id="userTable">
        <columns>
            <TableColumn fx:id="userName" text="Nutzername"/>
            <TableColumn fx:id="firstName" text="Vorname"/>
            <TableColumn fx:id="lastName" text="Nachname"/>
            <TableColumn fx:id="creationTimestamp" text="Erstellungsdatum"/>
            <TableColumn fx:id="lastUpdatedTimestamp" text="Letzte Ã„nderung"/>
            <TableColumn fx:id="actions" text="Aktionen"/>
        </columns>
    </TableView>
</VBox>
